{
  "manifest_version": 3,
  "name": "WordPress Translation Assistant",
  "version": "1.1",
  "description": "Automatically saves copied text and allows you to view and manage translations on WordPress sites.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "clipboardWrite"
  ],
  "host_permissions": [
    "https://api.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["url_translations.json"],
      "matches": ["<all_urls>"]
    }
  ]
}